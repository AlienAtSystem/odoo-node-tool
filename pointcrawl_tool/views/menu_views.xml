<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="point_location_action" model="ir.actions.act_window">
            <field name="name">Locations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">point.location</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_type': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No locations found. Let's create one!
                </p>
            </field>
        </record>

        <record id="point_connection_action" model="ir.actions.act_window">
            <field name="name">Connections</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">point.connection</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No connections found.
                </p>
            </field>
        </record>

        <record id="point_area_action" model="ir.actions.act_window">
            <field name="name">Areas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">point.area</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No areas found.
                </p>
            </field>
        </record>

        <record id="point_connection_type_action" model="ir.actions.act_window">
            <field name="name">Clues</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">point.connection.type</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No connection types found.
                </p>
            </field>
        </record>


        <menuitem name="Pointmap"
                  id="menu_point_root"
                  action=""
                  web_icon="pointcrawl_tool,static/description/icon.png"
                  sequence="4"/>

        <menuitem name="Elements"
                  id="menu_point_elements"
                  action=""
                  sequence="10"
                  parent="menu_point_root"/>

        <menuitem name="Locations"
                  id="menu_point_locations"
                  action="point_location_action"
                  sequence="10"
                  parent="menu_point_elements"/>

        <menuitem name="Connections"
                  id="menu_point_connections"
                  action="point_connection_action"
                  sequence="20"
                  parent="menu_point_elements"/>

        <menuitem name="Areas"
                  id="menu_point_areas"
                  action="point_area_action"
                  sequence="30"
                  parent="menu_point_elements"/>

        <menuitem name="Map Display"
                  id="menu_point_map"
                  action="action_report_map"
                  sequence="40"
                  parent="menu_point_elements"/>

        <menuitem name="Configuration"
                  id="menu_point_config"
                  action=""
                  sequence="20"
                  parent="menu_point_root"/>

        <menuitem name="Connection Types"
                  id="menu_point_connection_types"
                  action="point_connection_type_action"
                  sequence="10"
                  parent="menu_point_config"/>

    </data>
</odoo>